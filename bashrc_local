# .bashrc_local


# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and function
if [ -f "${HOME}/server-config/vimrc" ]; then
    svi () { sudo vim -u "${HOME}/server-config/vimrc" $@; }
fi

if [ -f "${HOME}/server-config/aliases" ]; then
	. "${HOME}/adminjs/server-config/aliases"
fi

if [ -f "${HOME}/server-config/PS1" ]; then
	. "${HOME}/server-config/PS1"
fi



